<Button>:
    color: .3, .7, .8, 1
    bold: True

<Welcome>:

    name: "main"

    from_codon: from_codon
    from_amino: from_amino

    GridLayout:
        cols: 1
        size: root.width, root.height

        Label:
            text: "Welcome in AminoReader"
            bold: True
            size_hint: 0.5, 0.2
            font_size: 30

        GridLayout:
            cols: 2

            Label:
                text: "choose a file from codon notation (also row file)"
                size_hint: 0.5, 0.2
                font_size: 20

            Button:
                id: from_codon
                size_hint: 0.2, 0.1
                font_size: 20
                text: "From Codon"
                on_release:
                    app.root.current = "codon"
                    root.manager.transition.direction = "left"

            Label:
                text: "choose a file from aminoacid one character notation "
                size_hint: 0.5, 0.2
                font_size: 20

            Button:
                id: from_amino
                size_hint: 0.2, 0.1
                font_size: 20
                text: "From Aminoacid"
                on_release:
                    app.root.current = "amino_one"
                    root.manager.transition.direction = "left"

            Label:
                text: "choose a file from aminoacid three character notation "
                size_hint: 0.5, 0.2
                font_size: 20

            Button:
                id: from_amino
                size_hint: 0.2, 0.1
                font_size: 20
                text: "From Aminoacid"
                on_release:
                    app.root.current = "amino_three"
                    root.manager.transition.direction = "left"

<Codon>:
    name: "codon"

    codon_input: codon_input
    sequence: sequence
    switch_one: switch_one

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: 'Back'
                on_release:
                    codon_input.text = ""
                    sequence.text = ""
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

            Button:
                text: 'Load'
                on_release: root.show_load()

            Label:
                text: 'one_codon: '

            Switch:
                id: switch_one
                active: True
                on_active: root.switch(self, self.active)

            Button:
                text: "calculate mass"
                on_release: root.calculate_mass()

            Button:
                text: "calculate isoValue"
                on_release: root.calculate_isoValue()

        BoxLayout:
            TextInput:
                id: codon_input
                text: ''
            RstDocument:
                id: sequence
                text: sequence.text
                show_errors: True

<LoadDialog>:

    FloatLayout:

        FileChooserListView:
            id: filechooser
            pos_hint:{"right": 0.9, "top":1}
            size_hint: 0.7, 0.9
            on_selection: root.load(filechooser.path, filechooser.selection)

        Button:
            pos_hint:{"left": 0.9, "top":0.1}
            size_hint: 0.3, 0.1
            text: "Cancel"
            on_release: root.cancel()

<MassDialog>:

    name: "mass dialog"
    mass: mass
    set_mass: set_mass
    set_volume: set_volume
    concentration: concentration
    cancel: cancel

    GridLayout:
        cols: 2
        size: root.width, root.height

        Label:
            size_hint: root.width / 2, root.height / 5
            font_size: 30
            text: "Molar mass is [g/mol]:"

        Label:
            id: mass
            size_hint: root.width / 2, root.height / 5
            font_size: 30
            text: mass.text

        Label:
            size_hint: root.width / 2, root.height / 5
            font_size: 30
            text: "set a mass [mg]: "

        TextInput:
            id: set_mass
            size_hint: root.width / 2, root.height / 5
            font_size: 30
            multiline: False

        Label:
            size_hint: root.width / 2, root.height / 5
            font_size: 30
            text: "set a volume [mL]: "

        TextInput:
            id: set_volume
            size_hint: 0.5, 0.5
            font_size: 30
            multiline: False

        Label:
            size_hint: root.width / 2, root.height / 5
            font_size: 30
            text: "concentration:"

        Label:
            id: concentration
            size_hint: root.width / 2, root.height / 5
            font_size: 30
            text: concentration.text

        Button:
            id: cancel
            size_hint: root.width / 8, root.height / 20
            text: "BACK"
            on_release: root.cancel()

        Button:
            size_hint: root.width / 8, root.height / 20
            text: "SUBMIT"
            on_release: root.submit()

<IsoValueDialog>:

    name: "isovalue dialog"
    iso: iso
    cancel: cancel

    FloatLayout:
        Label:
            id: iso
            pos_hint:{"left": 0.7, "top":0.75}
            size_hint: 0.8, 0.2
            font_size: 20
            text: iso.text

        Button:
            id: cancel
            pos_hint:{"y": 0.15, "x":0.25}
            size_hint: 0.2, 0.05
            text: "BACK"
            on_release: root.cancel()

<Amino_one>:
    name: "amino_one"

    sequence: sequence

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: 'Back'
                on_release:
                    sequence.text = ""
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

            Button:
                text: 'Load'
                on_release: root.show_load()

            Button:
                text: "calculate mass"
                on_release: root.calculate_mass()

            Button:
                text: "calculate isoValue"
                on_release: root.calculate_isoValue()

        BoxLayout:
            TextInput:
                id: sequence
                text: ''

<Amino_three@Screen>:

    name: "amino_three"

    sequence: sequence

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: 'Back'
                on_release:
                    sequence.text = ""
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

            Button:
                text: 'Load'
                on_release: root.show_load()

            Button:
                text: "calculate mass"
                on_release: root.calculate_mass()

            Button:
                text: "calculate isoValue"
                on_release: root.calculate_isoValue()

        BoxLayout:
            TextInput:
                id: sequence
                text: ''
